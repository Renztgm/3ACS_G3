@page
@model Payroll_Test_2.Pages.BonusPageModel
@{
    ViewData["Title"] = "Add Bonus";
}

<h1>Add Bonus</h1>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Bonus.EmployeeID" class="control-label">Employee</label>
                <select asp-for="Bonus.EmployeeID" class="form-select" asp-items="Model.EmployeeSelectList"></select>
                <span asp-validation-for="Bonus.EmployeeID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bonus.Amount" class="control-label">Bonus Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Bonus.Amount" class="form-control" />
                </div>
                <span asp-validation-for="Bonus.Amount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bonus.Date" class="control-label">Date</label>
                <input asp-for="Bonus.Date" class="form-control" type="date" />
                <span asp-validation-for="Bonus.Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bonus.Description" class="control-label">Description</label>
                <textarea asp-for="Bonus.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Bonus.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./BonusIndexPage" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
