@page
@model Payroll_Test_2.Pages.LoansLoc.CreateModel
@{
    ViewData["Title"] = "Create Loan";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
        color: #333;
    }

    h1 {
        text-align: center;
        margin-top: 30px;
        font-size: 2.5rem;
        color: #2C3E50;
        font-weight: bold;
    }

    .container {
        max-width: 850px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: 600;
        color: #34495E;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        font-size: 0.9rem;
        color: #e74c3c;
    }

    .btn {
        display: inline-block;
        padding: 10px 25px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: 0.3s ease;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-secondary {
        background-color: #bdc3c7;
        color: white;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }

    .form-actions {
        display: flex;
        gap: 15px;
    }

   
</style>

<h1>Create New Loan</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="Loan.EmployeeID"></label>
            <input asp-for="Loan.EmployeeID" class="form-control" />
            <span asp-validation-for="Loan.EmployeeID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.LoanType"></label>
            <select asp-for="Loan.LoanType" class="form-control">
                <option value="">-- Select Loan Type --</option>
                <option value="Personal">Personal</option>
                <option value="Emergency">Emergency</option>
                <option value="Education">Education</option>
                <option value="Medical">Medical</option>
                <option value="Housing">Housing</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Loan.LoanType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.LoanAmount"></label>
            <input asp-for="Loan.LoanAmount" class="form-control" />
            <span asp-validation-for="Loan.LoanAmount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.LoanStatus"></label>
            <select asp-for="Loan.LoanStatus" class="form-control">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Active">Active</option>
                <option value="Completed">Completed</option>
                <option value="Defaulted">Defaulted</option>
            </select>
            <span asp-validation-for="Loan.LoanStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.DateIssued"></label>
            <input asp-for="Loan.DateIssued" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Loan.DateIssued" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.DueDate"></label>
            <input asp-for="Loan.DueDate" class="form-control" type="date" />
            <span asp-validation-for="Loan.DueDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Loan.PaidLoan"></label>
            <input asp-for="Loan.PaidLoan" class="form-control" value="0" />
            <span asp-validation-for="Loan.PaidLoan" class="text-danger"></span>
        </div>

        <div class="form-group form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
