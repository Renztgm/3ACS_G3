@page "{id:int}"
@model Payroll_Test_2.Pages.LoansLoc.EditModel
@{
    ViewData["Title"] = "Edit Loan";
}

<h1>Edit Loan</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Loan.LoanID" />

            <div class="form-group mb-3">
                <label asp-for="Loan.EmployeeID" class="control-label"></label>
                <input asp-for="Loan.EmployeeID" class="form-control" disabled/>
                <span asp-validation-for="Loan.EmployeeID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.LoanType" class="control-label"></label>
                <select asp-for="Loan.LoanType" class="form-control" disabled>
                    <option value="Personal">Personal</option>
                    <option value="Emergency">Emergency</option>
                    <option value="Education">Education</option>
                    <option value="Medical">Medical</option>
                    <option value="Housing">Housing</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Loan.LoanType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.LoanAmount" class="control-label"></label>
                <input asp-for="Loan.LoanAmount" class="form-control" disabled/>
                <span asp-validation-for="Loan.LoanAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.LoanStatus" class="control-label"></label>
                <select asp-for="Loan.LoanStatus" class="form-control" disabled>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Active">Active</option>
                    <option value="Completed">Completed</option>
                    <option value="Defaulted">Defaulted</option>
                </select>
                <span asp-validation-for="Loan.LoanStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.DateIssued" class="control-label"></label>
                <input asp-for="Loan.DateIssued" class="form-control" type="date" disabled />
                <span asp-validation-for="Loan.DateIssued" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.DueDate" class="control-label"></label>
                <input asp-for="Loan.DueDate" class="form-control" type="date" />
                <span asp-validation-for="Loan.DueDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Loan.PaidLoan" class="control-label"></label>
                <input asp-for="Loan.PaidLoan" class="form-control" disabled/>
                <span asp-validation-for="Loan.PaidLoan" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}