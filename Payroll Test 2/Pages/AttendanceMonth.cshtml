@page
@model Payroll_Test_2.Pages.AttendanceMonthModel
@{
    ViewData["Title"] = "Monthly Attendance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Attendance</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .table-responsive {
            max-height: 500px;
            overflow-y: auto;
        }

        .present {
            background-color: #d4edda;
        }

        .absent {
            background-color: #f8d7da;
        }

        .selected {
            background-color: #ffc107 !important;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Monthly Attendance</h2>
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>AttendanceID</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody id="attendanceTableBody">
                    <!-- Data will be inserted dynamically -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tableBody = document.querySelector("tbody");
            let attendanceMonthData = @Html.Raw(Model.AttendanceMonthJson);

            // Ensure the JSON data is parsed correctly
            if (attendanceMonthData && Array.isArray(attendanceMonthData)) {
                attendanceMonthData.forEach(record => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${record.Id}</td>
                        <td>${record.Name}</td>
                        <td>${record.Date}</td>
                        <td class="${record.Present ? 'present' : 'absent'}">
                            ${record.Present ? 'Present' : 'Absent'}
                        </td>
                        <td>${record.Time}</td>
                    `;

                    tableBody.appendChild(row);
                });
            } else {
                tableBody.innerHTML = "<tr><td colspan='5'>No attendance records found.</td></tr>";
            }
        });
    </script>




</body>
</html>
