@page
@model Payroll_Test_2.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Email</td>
                <td>@emp.PhoneNumber</td>
                <td>@emp.Salary.ToString("C")</td>
                <td>@emp.Department</td>
                <td>@emp.EmploymentStatus</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@emp.EmployeeId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
