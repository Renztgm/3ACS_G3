@page "{id:int}"
@model Payroll_Test_2.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form method="post">
    <input type="hidden" asp-for="Employee.EmployeeId" />

    <div>
        <label asp-for="Employee.FirstName"></label>
        <input asp-for="Employee.FirstName" />
    </div>

    <div>
        <label asp-for="Employee.LastName"></label>
        <input asp-for="Employee.LastName" />
    </div>

    <div>
        <label asp-for="Employee.Email"></label>
        <input asp-for="Employee.Email" />
    </div>

    <div>
        <label asp-for="Employee.PhoneNumber"></label>
        <input asp-for="Employee.PhoneNumber" />
    </div>

    <div>
        <label asp-for="Employee.Salary"></label>
        <input asp-for="Employee.Salary" type="number" step="0.01" />
    </div>

    <div>
        <label asp-for="Employee.SalaryType"></label>
        <input asp-for="Employee.SalaryType" />
    </div>

    <div>
        <label asp-for="Employee.HireDate"></label>
        <input asp-for="Employee.HireDate" type="date" />
    </div>

    <div>
        <label asp-for="Employee.EmploymentStatus"></label>
        <select asp-for="Employee.EmploymentStatus">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
    </div>

    <div>
        <label asp-for="Employee.DepartmentId"></label>
        <input asp-for="Employee.DepartmentId" />
    </div>

    <button type="submit">Save</button>
</form>
